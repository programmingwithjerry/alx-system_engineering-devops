#!/usr/bin/env bash
# Script to install and setup nginx web server.

# Update package lists and upgrade existing packages
sudo apt-get update

# Install nginx web server
sudo apt-get install nginx

# list the applications configurations that ufw knows how to work
sudo ufw app list

# Adjust the firewall
sudo ufw allow 'Nginx HTTP'

# Start nginx
sudo service nginx start

# Checking the Status of Nginx
sudo service nginx status


# Create a simple 'Hello World!' index page in the default nginx web directory
echo "Hello World!" > /var/www/html/index.nginx-debian.html

