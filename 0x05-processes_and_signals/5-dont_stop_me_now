#!/usr/bin/env bash
# Find the PID of the process named "4-to_infinity_and_beyond"

pid=$(pgrep -f "4-to_infinity_and_beyond")
# If a PID is found, kill the process
if [ -n "$pid" ]; then
    echo "Killing process 4-to_infinity_and_beyond with PID $pid..."
    kill "$pid"  # Send the default SIGTERM signal to stop the process
else
    echo "Process 4-to_infinity_and_beyond not found."
fi
